<view><image class="bg2" src="https://aictb.oss-cn-shanghai.aliyuncs.com/App/registe_bg.png" mode="widthFix"></image><view class="registe"><view class="zhanhao"><input type="text" placeholder="请输入手机号" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/><image hidden="{{!(phone.length>0)}}" src="https://aictb.oss-cn-shanghai.aliyuncs.com/App/input_del.png" mode="widthFix" data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" bindtap="__e"></image></view><view class="setcode"><input class="code" type="text" placeholder="验证码" data-event-opts="{{[['input',[['__set_model',['','code','$event',[]]]]]]}}" value="{{code}}" bindinput="__e"/><text data-event-opts="{{[['tap',[['getCodeClick',['$event']]]]]}}" class="getCode" bindtap="__e">{{getText}}</text></view><view class="zhanhao"><input password="{{!pass_show}}" placeholder="请设置登录密码" data-event-opts="{{[['input',[['__set_model',['','password','$event',[]]]]]]}}" value="{{password}}" bindinput="__e"/><block wx:if="{{!pass_show}}"><image src="https://aictb.oss-cn-shanghai.aliyuncs.com/App/pass_false.png" mode="widthFix" data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" bindtap="__e"></image></block><block wx:else><image src="https://aictb.oss-cn-shanghai.aliyuncs.com/App/pass_true.png" mode="widthFix" data-event-opts="{{[['tap',[['e2',['$event']]]]]}}" bindtap="__e"></image></block></view><button class="loginClick" type="default" disabled="{{!isCheck}}" data-event-opts="{{[['tap',[['loginClick',['$event']]]]]}}" bindtap="__e">注册并登录</button><checkbox-group data-event-opts="{{[['change',[['radioChange',['$event']]]]]}}" bindchange="__e"><label class="radio_warp"><checkbox value="{{true}}" checked="{{isCheck}}" color="#E50304"></checkbox><view class="text">注册即视为同意<text data-event-opts="{{[['tap',[['pagetoAbout',['$event']]]]]}}" class="pageTo" catchtap="__e">《注册协议》</text></view></label></checkbox-group></view></view>