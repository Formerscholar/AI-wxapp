page {
  background: #eee;
  font-family: PingFang SC;
}
.top {
  padding: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background: #fff;
}
.top > text {
  font-size: 28rpx;
  color: #999;
}
.top .title {
  font-size: 32rpx;
  color: #ec7727;
}
.top .title text {
  margin-right: 20rpx;
}
.top .title text:nth-child(3) {
  color: #999;
}
.title2 {
  padding: 30rpx;
  margin: 20rpx 0;
  font-size: 24rpx;
  background-color: #fff;
}
.item {
  padding: 10rpx 30rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  background: #fff;
  color: #999;
  margin-bottom: 20rpx;
}
.item .bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 15rpx 0;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 24rpx;
  color: #ec7727;
}
.item .bottom .select image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.item .bottom .btn {
  border: 1rpx solid #F8601C;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  padding: 10rpx 30rpx;
}
.leixing {
  z-index: 999;
  width: 650rpx;
  background: #fff;
  padding: 30rpx;
}
.leixing .title {
  text-align: center;
  color: #F8601C;
  font-size: 30rpx;
  padding: 30rpx 0;
}
.leixing scroll-view {
  width: 100%;
  height: 500rpx;
}
.leixing scroll-view .list {
  z-index: 999;
  border-bottom: 1rpx solid #eee;
  overflow: hidden;
}
.leixing scroll-view .list button {
  float: right;
  margin: 20rpx;
  color: #F8601C;
  border: 1rpx solid #F8601C;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  padding: 0;
  background: #fff;
  width: 159rpx;
  font-size: 20rpx;
}
.leixing .button {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
}
.leixing .button button {
  margin-top: 30rpx;
  font-size: 24rpx;
  border: 1rpx solid #fff;
  width: 100;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background-image: -webkit-gradient(linear, left top, right top, from(#E35F21), to(#f09632));
  background-image: -webkit-linear-gradient(left, #E35F21 0%, #f09632 100%);
  background-image: linear-gradient(left, #E35F21 0%, #f09632 100%);
}
.zt {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: #666;
  opacity: 0.5;
  z-index: 99;
}

