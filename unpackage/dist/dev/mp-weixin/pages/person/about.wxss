page {
  background: #eee;
  font-family: PingFang SC;
}
.container {
  color: #999;
  font-size: 30rpx;
}
.container > image {
  display: block;
  width: 125rpx;
  height: 165rpx;
  margin: 80rpx auto;
}
.edit {
  width: 700rpx;
  background: #fff;
  margin: 0 auto;
  border: 1rpx solid #E5E5E5;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
}
.center {
  margin: 0 30rpx 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  border-bottom: 1rpx solid #f2f2f2;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.center text:nth-of-type(1) {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-left: 80rpx;
}
.center image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.center:nth-last-of-type(1) {
  border-bottom: none;
}

