page {
  background: #fff;
  font-family: PingFang SC;
  width: 100vw;
  height: 100vh;
}
.bg2 {
  z-index: -1;
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 150rpx;
  background: #e50304;
}
.card {
  background: url(//aictb.oss-cn-shanghai.aliyuncs.com/wx_xcx/icon/vip-bg.png) no-repeat top left;
  background-size: cover;
  width: 700rpx;
  height: 244rpx;
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
  margin: 25rpx auto 50rpx;
  position: relative;
}
.card .price view:first-child {
  font-size: 40rpx;
  font-weight: bold;
  color: #e10101;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 80rpx;
  color: #fff;
}
.card .nick {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: absolute;
  top: 17rpx;
  right: 28rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #595757;
}
.card .nick image {
  width: 97rpx;
  height: 97rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.card .time {
  position: absolute;
  left: 60rpx;
  bottom: 15rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #cdc4c4;
}
.xufei {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 50rpx auto 20rpx;
  background-image: -webkit-gradient(linear, left top, right top, from(#e50304), color-stop(80%, #f74300));
  background-image: -webkit-linear-gradient(left, #e50304 0%, #f74300 80%);
  background-image: linear-gradient(left, #e50304 0%, #f74300 80%);
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.xufei text:first-child {
  font-size: 30rpx;
  font-weight: 800;
  color: white;
}
.b-title {
  width: 659rpx;
  height: 129rpx;
  background: #fff;
  margin: 0 auto;
  position: relative;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 20rpx 30rpx 0 120rpx;
}
.b-title image {
  position: absolute;
  left: 30rpx;
  top: 50%;
  width: 60rpx;
  height: 55rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.b-title text:nth-of-type(1) {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #595757;
}
.b-title text:nth-of-type(2) {
  display: block;
  font-size: 28rpx;
  margin-top: 8rpx;
  color: #cdcdcd;
}
