  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.yzcode input {
  border: 1rpx solid #eee;
  height: 100rpx;
  width: 320rpx;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  padding-left: 30rpx;
